<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assist.imobilandroidapp">
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ImobilAndroidApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".screens.averageUser.screens.mainScreen.MainScreen"
            android:exported="false">
            <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="${MAPS_API_KEY}" />
        </activity>
        <activity
            android:name=".screens.signup.SignUp"
            android:exported="false">

        </activity>
        <activity
            android:name=".screens.login.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.resetPassword.ResetPassword"
            android:exported="false">
        </activity>
        <activity
            android:name=".screens.forgotPassword.ForgotPassword"
            android:exported="false">
        </activity>
        <activity
            android:name=".screens.main.MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>