<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.client.screens.profileScreens.loginAndSecurity.LoginAndSecurityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_16dp"
            android:layout_marginEnd="@dimen/d_16dp"
            android:orientation="vertical">

            <include
                android:id="@+id/profile_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/profile_header"
                android:layout_marginTop="@dimen/d_8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lLFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPassword"
                            android:layout_width="@dimen/d_0dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/device"
                            android:layout_marginEnd="@dimen/d_10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="@color/grayscale_700"
                            app:layout_constraintEnd_toStartOf="@id/tvPasswordUpdate"
                            android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:id="@+id/tvPasswordUpdate"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semi_bold"
                            android:text="@string/update"
                            android:textColor="@color/primary_500"
                            android:textSize="@dimen/text_size_14sp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tVClientFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_8dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/last_updated_3_weeks_ago"
                        android:textColor="@color/grayscale_400"
                        android:textSize="@dimen/text_size_14sp" />

                    <include
                        android:id="@+id/lClientEditInputs"
                        layout="@layout/client_profile_edit_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_16dp"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_1dp"
                        android:layout_marginTop="@dimen/d_16dp"
                        android:background="@color/grayscale_200" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tVOptionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_32dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/social_accounts"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <LinearLayout
                    android:id="@+id/lLFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_20dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvFacebook"
                            android:layout_width="@dimen/d_0dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/device"
                            android:layout_marginEnd="@dimen/d_10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="@color/grayscale_700"
                            app:layout_constraintEnd_toStartOf="@id/tVFacebookConnect"
                            android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:id="@+id/tVFacebookConnect"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semi_bold"
                            android:text="@string/connect"
                            android:textColor="@color/primary_500"
                            android:textSize="@dimen/text_size_14sp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tVFacebookAccountStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_8dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/not_connected"
                        android:textColor="@color/grayscale_400"
                        android:textSize="@dimen/text_size_14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_1dp"
                        android:layout_marginTop="@dimen/d_16dp"
                        android:background="@color/grayscale_200"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lLGoogleAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_20dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvGoogle"
                            android:layout_width="@dimen/d_0dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/device"
                            android:layout_marginEnd="@dimen/d_10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="@color/grayscale_700"
                            app:layout_constraintEnd_toStartOf="@id/tVGoogleAccountStatusDisconect"
                            android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:id="@+id/tVGoogleAccountStatusDisconect"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semi_bold"
                            android:text="@string/disconnect"
                            android:textColor="@color/primary_500"
                            android:textSize="@dimen/text_size_14sp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tVGoogleAccountStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d_8dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/conected"
                        android:textColor="@color/grayscale_400"
                        android:textSize="@dimen/text_size_14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_1dp"
                        android:layout_marginTop="@dimen/d_16dp"
                        android:background="@color/grayscale_200"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_32dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/recent_login_activity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <LinearLayout
                    android:id="@+id/lLPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="37dp"
                        android:src="@drawable/ic_phone"
                        app:tint="@color/grayscale_400"
                        android:layout_marginTop="@dimen/d_10dp"
                        android:layout_marginStart="@dimen/d_8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/d_16dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDeviceName"
                                android:layout_width="@dimen/d_0dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/device"
                                android:layout_marginEnd="@dimen/d_10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textColor="@color/grayscale_700"
                                app:layout_constraintEnd_toStartOf="@id/tVDeviceLogOut"
                                android:textSize="@dimen/text_size_16sp" />

                            <TextView
                                android:id="@+id/tVDeviceLogOut"
                                android:layout_width="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_semi_bold"
                                android:text="@string/log_out_device"
                                android:textColor="@color/primary_500"
                                android:textSize="@dimen/text_size_14sp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tVPhoneInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_8dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/location"
                            android:textColor="@color/grayscale_400"
                            android:textSize="@dimen/text_size_14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d_1dp"
                            android:layout_marginTop="@dimen/d_16dp"
                            android:background="@color/grayscale_200"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lLDesktop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/d_37dp"
                        android:layout_height="@dimen/d_30dp"
                        android:src="@drawable/ic_desktop"
                        app:tint="@color/grayscale_400"
                        android:layout_marginTop="@dimen/d_12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/d_10dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvDesktopName"
                                android:layout_width="@dimen/d_0dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/device"
                                android:layout_marginEnd="@dimen/d_10dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:textColor="@color/grayscale_700"
                                app:layout_constraintEnd_toStartOf="@id/tVDesktopLogOut"
                                android:textSize="@dimen/text_size_16sp" />

                            <TextView
                                android:id="@+id/tVDesktopLogOut"
                                android:layout_width="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_semi_bold"
                                android:text="@string/log_out_device"
                                android:textColor="@color/primary_500"
                                android:textSize="@dimen/text_size_14sp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/tVDesktopInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d_8dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/location"
                            android:textColor="@color/grayscale_400"
                            android:textSize="@dimen/text_size_14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d_1dp"
                            android:layout_marginTop="@dimen/d_16dp"
                            android:background="@color/grayscale_200"/>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d_32dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp" />

                <LinearLayout
                    android:id="@+id/lLAccountDezactivate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/d_20dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDezactivateInfo"
                            android:layout_width="@dimen/d_0dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/dezactivate_your_account"
                            android:layout_marginEnd="@dimen/d_10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textColor="@color/grayscale_700"
                            app:layout_constraintEnd_toStartOf="@id/tVDezactivate"
                            android:textSize="@dimen/text_size_16sp" />

                        <TextView
                            android:id="@+id/tVDezactivate"
                            android:layout_width="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semi_bold"
                            android:text="@string/dezactivate"
                            android:textColor="@color/alert_500"
                            android:textSize="@dimen/text_size_14sp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d_1dp"
                        android:layout_marginTop="@dimen/d_16dp"
                        android:background="@color/grayscale_200"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>